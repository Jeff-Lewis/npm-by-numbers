/* ------------------ */
/*   Primary styles   */
/* ------------------ */

* {
  box-sizing: border-box;
}

body {
  font-family: 'Open Sans', sans-serif;
  margin: 0;
  padding: 0px $body_padding $body_padding $body_padding;
}

p {
  margin-top: 0px;
}

a {
  text-decoration: none;
  color: $links_red;
}

a:hover {
  color: $data_medblue ;
}

ul {
  margin: 0;
  padding: 0;
}

img {
  display: block;
  max-width: 100%;
}

h1 {
  margin: 0;
}

.symboldefault {
  display: inline-block;
  border-radius: 50%;
  width: 10px;
  height: 10px;
}

.symbol {
  background-color: $data_lightblue;
  @extend .symboldefault
}

.subtext {
  color: grey;
  font-size: 0.8em;
}

#footer {
  position: fixed;
  height: 25px;
  background-color: white;
  border-top: 1px solid $border_color_light;
  bottom: 0;
  left: 40px;
  right: 40px;
  text-align: center;
  font-size: 0.7em;
  color: #aaa;
  padding-top: 3px;
}