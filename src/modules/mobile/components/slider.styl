.slides {

  hr {
    padding: 0;
    margin: 0;
  }

  .slide {
    width: 100%;
    margin: 0 auto;

    .start {
      margin-top:50px;
      margin-bottom:20px;
      text-align:right;
      display:inline-block;
      width: 100%;
      font-size: 2em;
      padding-right:10px;
    }
  }

  .note {
    margin-top: 90px;
    font-size: 0.9em;
    font-style: italic;
    padding-left: 0px;
    color: $data_darkblue;
  }
}