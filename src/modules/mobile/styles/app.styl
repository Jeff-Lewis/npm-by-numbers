.layout.mobile {

  font-size: 0.8em;
  padding: 0px $body_padding/3 $body_padding/3 $body_padding/3;

  .help {
    position: absolute;
    top: 10px;
    right: 10px;
    a {
      color: white;
    }
  }

  #footer {
    position: fixed;
    height: 25px;
    background-color: #fff;
    border-top: 1px solid #cfcfcf;
    bottom: -1px;
    left: 0px;
    right: 0px;
    text-align: center;
    font-size: 0.7em;
    color: #aaa;
    padding-top: 3px;
    width: 100%;
  }
}

