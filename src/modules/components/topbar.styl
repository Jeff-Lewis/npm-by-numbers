#topbar {
  top: $body_padding;
  left: $body_padding;
  right: $body_padding;
  height: $topbar_height;
  border-bottom: 1px solid $border_color;

  default-section();

  img {
    float:left;
  }
  .explore-by {

    display: inline-block;
    position: absolute;
    top: 0;
    left: $questions_width;

    span {
      display: inline-block;
      float: left;
      position: absolute;
      top: 32px;
      left: 0;
      font-variant:small-caps;
      color: $links_red;
      font-weight: bold;
      font-size: 0.7em;
    }

    ul.grid-menu {
      width: 400px;
      list-style-type: none;
      padding: 0;
      margin: 0;

      position: absolute;
      left: 40px;

      li {
        margin-top: 29px;
        font-size: 0.8em;
        display: inline-block;
        float: left;
        padding: 0px;
        padding-left: 12px;
        padding-right: 12px;
        padding-bottom: 3px
        padding-top: 0px;
        color: $links_red;
        font-variant:small-caps;
        margin-right: 5px;
        cursor: pointer;
      }

      li:hover {}

      li.selected {
        box-shadow:  0px -2px 0px 0px $links_red, inset 0px 19px 0px 0px $background_color;
      }

      li.selected:hover {}
    }
  }
}